<UserControl x:Class="Kevin.Pages.Page3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kevin.Pages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Kevin.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:Page3ViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <TextBlock d:Text="Text3"
                   Style="{StaticResource HeaderText}"
                   Text="{Binding Header}" />

        <TextBlock d:Text="Text3"
                   Style="{StaticResource HugeText}"
                   Text="{Binding PageMessage}" />
    </Grid>
</UserControl>
